<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSection.UserHelpFragment">

    <include layout="@layout/toolbar_indicator" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/collegeLogo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/collegeTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Sharnbasva University, Kalaburagi"
                        android:textAlignment="center"
                        android:textColor="@color/magenta"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/deptNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Department of MCA"
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/contact_corner"
                        android:padding="5dp"
                        android:text="@string/technical_nassistance"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/phoneNoTextView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/text_shape"
                            android:drawablePadding="10dp"
                            android:padding="8dp"
                            android:text="Loading..."
                            android:textColor="@color/black"
                            android:textIsSelectable="true"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_call"
                            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/phoneNoTextView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/text_shape"
                            android:drawablePadding="10dp"
                            android:padding="8dp"
                            android:text="Loading..."
                            android:textColor="@color/black"
                            android:textIsSelectable="true"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_call"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/phoneNoTextView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/text_shape"
                            android:drawablePadding="10dp"
                            android:padding="8dp"
                            android:text="Loading..."
                            android:textColor="@color/black"
                            android:textIsSelectable="true"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_call"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/phoneNoTextView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/text_shape"
                            android:drawablePadding="10dp"
                            android:padding="8dp"
                            android:text="Loading..."
                            android:textColor="@color/black"
                            android:textIsSelectable="true"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_call"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/addressTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_shape"
                            android:drawablePadding="10dp"
                            android:padding="8dp"
                            android:text="Loading..."
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/address"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/live_help"
        android:tint="@color/DodgerBlue"
        app:backgroundTint="@color/white"
        app:fabSize="auto"
        app:maxImageSize="45dp"
        app:rippleColor="@color/DodgerBlue"
        tools:ignore="ObsoleteLayoutParam" />

</RelativeLayout>
